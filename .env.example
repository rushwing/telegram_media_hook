# Copy this file to .env and fill in your values.

# Required: Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your-bot-token-here

# OpenClaw workspace root on the Pi
OPENCLAW_WORKSPACE=/home/openclaw/.openclaw/workspace

# Upload directory (relative to workspace)
UPLOAD_DIR=uploads

# Max file size the bot will accept, in MB
MAX_FILE_SIZE_MB=20

# Queue file for tracking processed media (relative to workspace)
QUEUE_FILE=uploads/telegram_media_queue.json
